<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Novetats">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="?attr/colorPrimary"
        app:titleTextColor="@android:color/white"
        app:layout_constraintBaseline_toBottomOf="parent"
        android:backgroundTint="@color/rojo">

        <ImageButton
            android:id="@+id/btn_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_person_4_24"
            android:background="#00000000"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp">

        </ImageButton>

        <TextView
            android:id="@+id/txt_novetat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NOVETATS"
            android:textSize="30sp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            />
    </androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:id="@+id/scrollviewregistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="75sp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20sp">

            <ImageView
                android:id="@+id/profilefoto1"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_marginTop="20sp"
                android:src="@drawable/weswingicpetit" />

            <TextView
                android:id="@+id/txtview1"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/profilefoto1"
                android:textSize="15sp"
                android:layout_marginLeft="10sp"
                android:padding="10sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/edittext1"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/txtview1"
                android:hint="Fa 6 hores"
                android:layout_marginLeft="70dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/baseline_forward"
                />
            <View
                android:id="@+id/linea1"
                android:layout_below="@id/edittext1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLinea"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:layout_below="@id/linea1"
                android:id="@+id/profilefoto2"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_marginTop="20sp"
                android:src="@drawable/weswingicpetit" />

            <TextView
                android:layout_below="@id/linea1"
                android:id="@+id/txtview2"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/profilefoto2"
                android:textSize="15sp"
                android:layout_marginLeft="10sp"
                android:padding="10sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black" />





        </RelativeLayout>



    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>