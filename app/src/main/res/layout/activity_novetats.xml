<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Novetats">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="?attr/colorPrimary"
        app:titleTextColor="@android:color/white"
        app:layout_constraintBaseline_toBottomOf="parent"
        android:backgroundTint="@color/rojo">

        <ImageButton
            android:id="@+id/btn_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_person_4_24"
            android:background="#00000000"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp">

        </ImageButton>

        <TextView
            android:id="@+id/txt_novetat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NOVETATS"
            android:textSize="30sp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            />
    </androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:id="@+id/scrollviewregistro"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toTopOf="@+id/navigation_bar"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20sp">

            <ImageView
                android:id="@+id/profilefoto1"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_marginTop="20sp"
                android:src="@drawable/weswingicpetit" />

            <TextView
                android:id="@+id/txtview1"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/profilefoto1"
                android:textSize="19sp"
                android:layout_marginLeft="10sp"
                android:padding="10sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/hinttext1"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/txtview1"
                android:hint="Fa 6 hores"
                android:layout_marginLeft="70dp"
                />
            <ImageView
                android:id="@+id/flecha1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/baseline_forward"
                />
            <View
                android:id="@+id/linea1"
                android:layout_below="@id/hinttext1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLinea"
                android:layout_marginTop="15dp"/>

            <ImageView
                android:layout_below="@id/linea1"
                android:id="@+id/profilefoto2"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_marginTop="20sp"
                android:src="@drawable/weswingicpetit" />

            <TextView
                android:layout_below="@id/linea1"
                android:id="@+id/txtview2"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/profilefoto2"
                android:textSize="19sp"
                android:layout_marginLeft="10sp"
                android:padding="10sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/flecha2"
                android:layout_below="@id/linea1"
                android:layout_toRightOf="@id/txtview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/baseline_forward"/>
            <TextView
                android:id="@+id/hinttext2"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/txtview2"
                android:hint="Fa 10 hores"
                android:layout_marginLeft="70dp"
                />
            <View
                android:id="@+id/linea2"
                android:layout_below="@id/hinttext2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLinea"
                android:layout_marginTop="15dp"/>
            <ImageView
                android:layout_below="@id/linea2"
                android:id="@+id/profilefoto3"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_marginTop="20sp"
                android:src="@drawable/weswingicpetit" />

            <TextView
                android:layout_below="@id/linea2"
                android:id="@+id/txtview3"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/profilefoto2"
                android:textSize="19sp"
                android:layout_marginLeft="10sp"
                android:padding="10sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/flecha3"
                android:layout_below="@id/linea2"
                android:layout_toRightOf="@id/txtview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/baseline_forward"/>
            <TextView
                android:id="@+id/hinttext3"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/txtview3"
                android:hint="Fa 10 hores"
                android:layout_marginLeft="70dp"
                />
            <View
                android:id="@+id/linea3"
                android:layout_below="@id/hinttext3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLinea"
                android:layout_marginTop="15dp"/>
            <ImageView
                android:layout_below="@id/linea3"
                android:id="@+id/profilefoto4"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_marginTop="20sp"
                android:src="@drawable/weswingicpetit" />

            <TextView
                android:layout_below="@id/linea3"
                android:id="@+id/txtview4"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/profilefoto2"
                android:textSize="19sp"
                android:layout_marginLeft="10sp"
                android:padding="10sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black" />

            <ImageView
                android:layout_below="@id/linea3"
                android:layout_toRightOf="@id/txtview4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/baseline_forward"/>
            <TextView
                android:id="@+id/hinttext4"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/txtview4"
                android:hint="Fa 10 hores"
                android:layout_marginLeft="70dp"
                />
            <View
                android:id="@+id/linea4"
                android:layout_below="@id/hinttext4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLinea"
                android:layout_marginTop="15dp"/>
            <ImageView
                android:layout_below="@id/linea4"
                android:id="@+id/profilefoto5"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_marginTop="20sp"
                android:src="@drawable/weswingicpetit" />

            <TextView
                android:layout_below="@id/linea4"
                android:id="@+id/txtview5"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/profilefoto5"
                android:textSize="19sp"
                android:layout_marginLeft="10sp"
                android:padding="10sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/flecha4"
                android:layout_below="@id/linea3"
                android:layout_toRightOf="@id/txtview5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/baseline_forward"/>
            <TextView
                android:id="@+id/hinttext5"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/txtview5"
                android:hint="Fa 10 hores"
                android:layout_marginLeft="70dp"
                />
            <View
                android:id="@+id/linea5"
                android:layout_below="@id/hinttext4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLinea"
                android:layout_marginTop="15dp"/>

        </RelativeLayout>

    </ScrollView>

    <!-- Barra de navegación -->
    <LinearLayout
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:background="#e7e2d7"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Iconos de navegación -->
        <ImageButton
            android:id="@+id/navigation_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_clock"
            app:tint="@color/rojo"/>

        <ImageButton
            android:id="@+id/navigation_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_news"
            app:tint="#9b9892" />

        <ImageButton
            android:id="@+id/navigation_notifications"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_star"
            app:tint="#9b9892"/>

        <ImageButton
            android:id="@+id/navigation_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/baseline_calendar_today_24"
            app:tint="#9b9892"/>

        <ImageButton
            android:id="@+id/icon_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_search"
            app:tint="#9b9892"/>

        <ImageButton
            android:id="@+id/icon_chat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_chat"
            app:tint="#9b9892"/>



    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>