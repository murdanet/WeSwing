<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Moguda"
    android:background="#d8d3c8">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="?attr/colorPrimary"
        app:titleTextColor="@android:color/white"
        app:layout_constraintBaseline_toBottomOf="parent"
        android:backgroundTint="#a24845">

        <ImageButton
            android:id="@+id/btn_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_person_4_24"
            android:background="#00000000"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp">

        </ImageButton>

        <TextView
            android:id="@+id/txt_novetat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="MOGUDA"
            android:textSize="30sp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            />
    </androidx.appcompat.widget.Toolbar>


    <!-- Primer recuadro -->

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="16dp"
        android:elevation="5dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FESTA DE INICI DE TRIMESTRE L.."
            android:textAlignment="center"
            android:textColor="@color/rojo"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ALTRES-LINDY HOP"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="22/04/2017-23/04/2017(4 HORES)"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

<!-- Segundo recuadro -->
    <LinearLayout
        android:layout_width="392dp"
        android:layout_height="56dp"
        android:background="@color/white"
        android:elevation="3dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="211dp"
        tools:ignore="MissingConstraints">


        <Switch
            android:id="@+id/switch7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:text="Hi assistiré"
            android:layout_marginLeft="13dp"
            android:textSize="17dp"/>
    </LinearLayout>

    <!-- Tercer recuadro, TODOT -->


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="#e7e2d7"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Iconos de navegación -->
        <ImageButton
            android:id="@+id/navigation_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_clock"
            app:tint="#9b9892" />

        <ImageButton
            android:id="@+id/navigation_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_news"
            app:tint="#9b9892" />

        <ImageButton
            android:id="@+id/navigation_notifications"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_star"
            app:tint="#9b9892" />

        <ImageButton
            android:id="@+id/navigation_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/baseline_calendar_today_24"
            app:tint="#9b9892" />

        <ImageButton
            android:id="@+id/icon_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_search"
            app:tint="#9b9892" />

        <ImageButton
            android:id="@+id/icon_chat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_chat"
            app:tint="#9b9892" />


    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>